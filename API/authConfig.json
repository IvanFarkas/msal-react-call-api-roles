{
  "credentials": {
    "tenantID": "Tenant_Id",
    "clientID": "Application_Id"
  },
  "metadata": {
    "authority": "login.microsoftonline.com",
    "discovery": ".well-known/openid-configuration",
    "version": "v2.0"
  },
  "settings": {
    "validateIssuer": true,
    "passReqToCallback": false,
    "loggingLevel": "info"
  },
  "protectedRoutes": {
    "todolist": {
      "endpoint": "/api",
      "scopes": [
        "access_as_user"
      ]
    }
  },
  "accessMatrix": {
    "todolist": {
      "path": "/todolist",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "roles": [
        "TaskUser",
        "TaskAdmin"
      ]
    },
    "dashboard": {
      "path": "/dashboard",
      "methods": [
        "GET"
      ],
      "roles": [
        "TaskAdmin"
      ]
    }
  }
}